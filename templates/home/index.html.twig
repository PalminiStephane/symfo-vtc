{% extends 'base.html.twig' %}

{% block body %}
        <!-- main -->
    <div class="my-5 py-5 text-center">
        <img src="favicon.png" height="100" alt="Logo O'flix" class="mb-3">
        <h1 class="display-6 fw-bold">Transport Privée</h1>
        <div class="col-lg-6 mx-auto">
            <p class="lead mb-4 text-muted">Où que vous soyez. Gratuit pour toujours.</p>
        </div>
    </div>

    <div class="container-xl bg-light p-5 border-top">

        <div class="row mb-2">

            <!-- nav genre -->
            <div class="col-12 col-lg-3">
                <h2 class="text-center text-muted fw-bold mb-4">Les voitures</h2>
                <ul class="d-flex flex-column flex-wrap list-unstyled justify-content-center">
                    {% for car in allCar %}
                        <li class="btn btn-sm btn-outline-danger mx-1 mb-2">{{ car.name }}</li>    
                    {% endfor %}
                </ul>
            </div>

            <div class="col-12 col-lg-9">

                <h2 class="text-muted fw-bold mb-4">Les chauffeurs</h2>
                {% for driver in allDriver %}
                    <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm bg-white position-relative">
                        <div class="col-4 movie__poster" style="background-image: url({{ driver.poster }});">
                            <img src="images/poster-placeholder.png" class="img-fluid">
                            <!-- img src="https://m.media-amazon.com/images/M/MV5BNThmZGY4NzgtMTM4OC00NzNkLWEwNmEtMjdhMGY5YTc1NDE4XkEyXkFqcGdeQXVyMTQxNzMzNDI@._V1_SX300.jpg" class="img-fluid" -->
                        </div>
                        <div class="col-8 p-4 d-flex flex-column position-static">
                            <h3 class="mb-1">{{ driver.name }}</h3>
                            <div class="mb-1 text-muted">{{ driver.description }}</div>
                            {# https://symfony.com/doc/5.4/templates.html#templates-link-to-pages #}
                            <a href="{{ path('app_home_show', {'id' : driver.id}) }}" class="fs-1 mt-3 text-danger align-self-start">
                                <i class="bi bi-arrow-right-square"></i>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <nav class="col-lg-9 offset-lg-3">
                <ul class="pagination">
                    <li class="page-item disabled">
                        <a class="page-link">&laquo;</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item" aria-current="page">
                        <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">&raquo;</a>
                    </li>
                </ul>
            </nav>

        </div>

    </div>
{% endblock %}